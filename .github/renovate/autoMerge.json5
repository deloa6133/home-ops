{
    "packageRules": [
        {
            "description": ["Auto-merge GitHub Actions for minor and patch"],
            "matchManagers": ["github-actions"],
            "matchDatasources": ["github-tags"],
            "automerge": true,
            "automergeType": "branch",
            "requiredStatusChecks": null,
            "matchUpdateTypes": ["minor", "patch"]
        }
    ]
}
